<h1>Groups</h1>

<% if admin? %>
  <a class="btn btn-primary mb-3" href="/groups/new" role="button">Create</a>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Privilege</th>
    </tr>
  </thead>
  <% @groups.each do |group| %><tr>
    <td scope="row"><a href="/groups/<%= group.id %>"><%= group.name %></a></td>
    <td><%= group.privilege %></td>
  </tr><% end %>
</table>
