<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <% @users.each do |user| %><tr>
    <td scope="row"><a href="/users/<%= user.id %>"><%= user.username %></a></td>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
  </tr><% end %>
</table>
