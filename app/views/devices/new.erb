<h1>Add a Device</h1>

<form action="/devices" method="post">
  <div class="row mb-5">
    <div class="col-4">
      <label for="serial_number">Serial Number</label>
      <input type="text" name="device[serial_number]" id="serial_number"
        class="form-control">
    </div>

    <div class="col-4">
      <label for="model">Model</label>
      <input type="text" name="device[model]" id="model" class="form-control">
    </div>

    <div class="col-4">
      <label for="firmware_version">Firmware Version</label>
      <input type="text" name="device[firmware_version]" id="firmware_version"
        class="form-control">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-6">
      <hr class="mb-3">
      <label for="last_contact">Last Contact</label>
      <input type="datetime-local" name="device[last_contact]" id="last_contact"
        class="mb-3">
      <br>
      <label for="last_activation">Last Activation</label>
      <input type="datetime-local" name="device[last_activation]"
        id="last_activation">
      <hr class="mb-3">
    </div>

    <div class="col-6">
      <h4>Groups</h4>
      <ul class="list-group d-flex justify-content-between mb-3">
      <% @groups.each do |group| %>
        <li class="list-group-item lh-condensed">
          <input type="checkbox" name="device[group_ids][]"
            id="group_<%= group.id %>" value="<%= group.id %>">
          <label for="group_<%= group.id %>"><%= group.name %></label>
        </li>
      <% end %></ul>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
      <button type="submit" class="btn btn-primary btn-block" id="create">
        Add Device
      </button>
    </div>
  </div>
</form>
